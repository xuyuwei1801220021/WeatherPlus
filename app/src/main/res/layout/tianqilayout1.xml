        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/indicator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignRight="@+id/indicator1"
            android:layout_alignParentRight="true">

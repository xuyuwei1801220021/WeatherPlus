<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/indicator3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true">
            <!-- 今⽇星期 -->
            <TextView
                android:id="@+id/week_today3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dip"
                android:singleLine="true"
                android:text="星期三"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
            <!-- 天⽓情况图⽚示例 -->
            <ImageView
                android:id="@+id/weather_img3"
                android:layout_width="145dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/week_today3"
                android:src="@drawable/biz_plugin_weather_qing" /><!-- 温度范围 -->
            <TextView
                android:id="@+id/temperature3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weather_img3"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dip"
                android:singleLine="true"
                android:text="-2℃~7℃"
                android:textColor="@android:color/white"
                android:textSize="20.0sp" />
            <!-- 天⽓状况 -->
            <TextView
                android:id="@+id/climate3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/temperature3"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dip"
                android:singleLine="true"
                android:text="多云转晴"
                android:textColor="@android:color/white"
                android:textSize="20.0sp" />
            <!-- ⻛⼒信息 -->
            <TextView
                android:id="@+id/wind3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/climate3"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dip"
                android:singleLine="true"
                android:text="微⻛"
                android:textColor="@android:color/white"
                android:textSize="20.0sp" />
        </RelativeLayout>
